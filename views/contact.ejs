    // map
    function initMap() {
        // The location of Uluru
        var uluru = {lat: 21.0289003, lng: 105.7816498};
        // The map, centered at Uluru
        var map = new google.maps.Map(
            document.getElementById('initMap'), {zoom: 14, center: uluru});
        // The marker, positioned at Uluru
        var marker = new google.maps.Marker(
            {
                position: uluru,
                map: map,
                label:{
                    text:"Pizza MlemMlem 1",
                    color:"red"
                }
            }
        );
    }


</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCaj0mHlR-keu-9hsR6d-gB0L9BclG04rk&callback=initMap"></script>
</body>
</html>
