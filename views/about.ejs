            <div class="container-1">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="9000">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="/images/container2222.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/images/container2-1.jpg" alt="Second slide">
                        </div>

                        <div class="carousel-item">
                            <img class="d-block w-100" src="/images/container2.jpg" alt="Third slide">
